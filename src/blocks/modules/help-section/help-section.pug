-
    const defaultHelpProps = {
        classes: '',
        img: '',
        title: '',
        text: '',
        btnText: '',
        isTransparent: false,
        modalLink: '#'
    }

mixin help-section(props= defaultHelpProps)
    -
        const checkProps = {
            classes: props.classes ? props.classes : defaultHelpProps.classes,
            img: props.img ? props.img : defaultHelpProps.img,
            title: props.title ? props.title: defaultHelpProps.title,
            text: props.text ? props.text: defaultHelpProps.text,
            btnText: props.btnText ? props.btnText : defaultHelpProps.btnText,
            isTransparent: props.isTransparent ? props.isTransparent : defaultHelpProps.isTransparent,
            modalLink: props.modalLink ? props.modalLink : defaultHelpProps.modalLink,
        }

        let transparentClass = checkProps.isTransparent === true ? ' section--transparent' : ''

    section.help-section.section.section--full(class= checkProps.classes + transparentClass)&attributes(attributes)
        .section__container.help-section__container
            .help-section__content
                .help-section__bg
                    img(class="lazyload" src="img/lazy-placeholder.webp" data-src= checkProps.img alt="")

                +title({
                    classes: 'help-section__title',
                    tag: 'h2',
                    size: '53',
                    text: checkProps.title
                })

                if(checkProps.text.length > 0)
                    .help-section__text!= checkProps.text

                +btn({
                    classes: 'help-section__btn',
                    name: checkProps.btnText,
                    cMode: 'red',
                    size: 'middle',
                    icon: 'arrow_enter'
                })(data-modal=checkProps.modalLink)


