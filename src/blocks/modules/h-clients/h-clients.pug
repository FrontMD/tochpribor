-
	const defaultHclientsProps = {
		classes: '',
		title: '',
		bg: ''
	}

mixin h-clients(props= defaultHclientsProps)
	-
		const checkProps = {
			classes: props.classes ? props.classes : defaultHclientsProps.classes,
			title: props.title ? props.title : defaultHclientsProps.title,
			bg: props.bg ? props.bg : defaultHclientsProps.bg,
		}

		let bgClass = checkProps.bg.length > 0 ? `section--${checkProps.bg}` : ''

	section.section.section--full.h-clients(class = checkProps.classes + bgClass)
		.section__container
			.section-header
				.section__tag.section-header__tag [Наши клиенты]
				+title({
					classes: 'section-header__title',
					tag: 'h2',
					size: '53',
					text: checkProps.title,
				})

			+cards-slider({
				title: '',
				slidesCount: '6',
				parallax: true
			})(data-parallax)
