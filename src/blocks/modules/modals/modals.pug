noindex
    div
        //- код модалок сюда

        //- Выбор города
        +modal({modalId:"cityModal", modalTitle:"Укажите ваш город", classes:"city-modal"})(data-js="cityModal")
            +field({
                placeholder: 'Поиск города',
                inputAttr: {
                    "data-js": "citySearchInput"
                },
                resetBtn: true,
                isSearch: true
            })
            ul.city-modal__list
                li.city-modal__item(data-js="cityModalItem" data-value="Москва") Москва
                li.city-modal__item(data-js="cityModalItem" data-value="Пермь") Пермь
                li.city-modal__item(data-js="cityModalItem" data-value="Санкт-Петербург") Санкт-Петербург
                li.city-modal__item(data-js="cityModalItem" data-value="Уфа") Уфа
                li.city-modal__item(data-js="cityModalItem" data-value="Самара") Самара
                li.city-modal__item(data-js="cityModalItem" data-value="Екатеринбург") Екатеринбург
                li.city-modal__item(data-js="cityModalItem" data-value="Челябинск") Челябинск
                li.city-modal__item(data-js="cityModalItem" data-value="Краснодар") Краснодар
                li.city-modal__item(data-js="cityModalItem" data-value="Нижний Новгород") Нижний Новгород

        //- Быстрый просмотр товара
        +modal({modalId:"quickViewModal", modalTitle:"Универсальная испытательная машина ТРМ-О 0,1 А0,5 Tochline", classes:"quick-view-modal"})
            .quick-view
                .quick-view__top 
                    +btn({
                        name: 'Сравнить',
                        icon: 'compare_2',
                        cMode: 'noborder',
                        size: 'link'
                    })
                    +btn({
                        name: 'Поделиться',
                        icon: 'share',
                        cMode: 'noborder',
                        size: 'link'
                    })
                .quick-view__grid
                    .quick-view__photo
                        .quick-view__tags
                            .catalog-card__tagblock
                                .catalog-card__tag.catalog-card__tag--green
                                    img(src="img/catalog/check_icon.svg")
                                    | В наличии
                            .catalog-card__tagblock
                                .catalog-card__tag.catalog-card__tag--blue Новинка
                            .catalog-card__tagblock
                                .catalog-card__tag.catalog-card__tag--red Скидка
                            .catalog-card__tagblock.hovered
                                .catalog-card__tag.catalog-card__tag--grey
                                    img(src="img/catalog/arrow_circle.svg")
                                    | Снято с производства
                                .catalog-card__note Товар больше не производится. Смотрите аналоги в карточке товара

                        img(src="img/catalog/product_7.webp")
                    .quick-view__info
                        .quick-view__articles
                            .quick-view__logo
                                img(src="img/catalog/quick_view_logo.webp")
                            +copy-btn({
                                text: 'Артикул 32131376233-19',
                                forCopy: '32131376233-19'
                            })
                            +copy-btn({
                                text: 'Номер в си рф: 76233-19',
                                forCopy: '76233-19'
                            })
                        .quick-view__block
                            .quick-view__subtitle Применение
                            .quick-view__text Статические испытания образов из различных материалов на растяжение, сжатие, изгиб, сдвиг, срез, адгезию и прочее
                        .quick-view__block
                            .quick-view__subtitle Характеристики
                            .quick-view__chars.chars-table
                                .chars-table__row
                                    .chars-table__title Конструктивное исполнение
                                    .chars-table__value настольное
                                .chars-table__row
                                    .chars-table__title Напряжение питания
                                    .chars-table__value  220В, 50Гц
                                .chars-table__row
                                    .chars-table__title Мин. нагрузка, Н
                                    .chars-table__value 0,2
                                .chars-table__row
                                    .chars-table__title Макс. нагрузка, Н
                                    .chars-table__value 100
                                .chars-table__row
                                    .chars-table__title Погрешность по нагрузке на данном диапазоне
                                    .chars-table__value  ±0.5%

                        .quick-view__block
                            .quick-view__subtitle Документы
                            +download-btn({
                                classes: '',
                                img: 'img/docs-type/pdf.svg',
                                name: 'Свидетельство об утверждении типа средств измерений ОС.С. 28.070.А №75160',
                                size: ''
                            })
                            +download-btn({
                                classes: '',
                                img: 'img/docs-type/pdf.svg',
                                name: 'Методика поверки',
                                size: ''
                            })
                    .quick-view__controls
                        .quick-view__order
                            .quick-view__prices
                                .quick-view__price 550 000 ₽
                                .quick-view__price.quick-view__price--old 680 000 ₽
                            +btn({
                                name: 'Подробнее о товаре',
                                size: 'full',
                                cMode: 'red'
                            })
                            +btn({
                                name: 'Запросить техническое описание',
                                size: 'full',
                                cMode: 'transparent-red'
                            })
                            +btn({
                                name: 'Подробнее о товаре',
                                size: 'full',
                                cMode: 'grey',
                                icon: 'question'
                            })
                        +btn({
                            name: 'Подробнее о товаре',
                            size: 'full',
                            cMode: 'transparent-red',
                            icon: 'arrow_enter'
                        })
