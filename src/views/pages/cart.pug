									}
								],
								prices: [
									'1 550 000 ₽',
									''
								]
							})

			.sidebar-layout__sidebar
				.section.section--full.section--transparent.cart-sidebar
					.cart-sidebar__container
						.cart-sidebar__order
							.cart-sidebar__title Ваш заказ
							.cart-sidebar__detail
								.cart-sidebar__row
									.cart-sidebar__name 5 товаров
									.cart-sidebar__value 9 999 999 ₽
								.cart-sidebar__row
									.cart-sidebar__name Скидка
									.cart-sidebar__value.cart-sidebar__value--red – 1 559 955 ₽
							.cart-sidebar__total
								.cart-sidebar__row
									.cart-sidebar__name Итого
									.cart-sidebar__value.title--32 12 550 000 ₽
							+btn({
								classes: '',
								size: "full",
								name: 'Запросить коммерческое предложение',
								cMode: 'red'
							})
						.cart-sidebar__note
							svg
								use(xlink:href=`img/sprites/sprite.svg#warning`)
